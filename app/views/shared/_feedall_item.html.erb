<li id="<%= feedall_item.id %>">
  
  <span class="feed_item"><%= link_to feedall_item.document_file_name, feedall_item.document.url, :target => "_blank"  %>
  </span>
  <span class="timestamp">
    - Posted <%= time_ago_in_words(feedall_item.created_at) %> ago.
  </span>
  <span class="user">
    by <%= feedall_item.user.name %>
  </span>
  
  <p>
  	Tags: <%= raw feedall_item.tag_list.map { |t| link_to t, tag_path(t) }.join(', ') %>
  </p>
  <% if can? :delete, feedall_item %>
  <%= link_to "delete", feedall_item, method: :delete, data: { confirm: "You sure?" }, title: feedall_item.document_file_name %>
  <% end %>
</li>
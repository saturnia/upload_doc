<h2>Dashboard of <%= current_user.name %></h2> <br />
<p> <%= flash[:notice] %> </p>
<div class="row">
	
	<div class="span8">
		<%= render 'shared/feedall' %>
	</div>

		

	<div class="span4">	
		<%= render 'layouts/form' %>
	</div>

	<% if can? [:delete, :update], @user %>

		<div class="span4 pull-right">
			<caption class="titlar">All Users | <% if can? :manage, @user %>
			<%= link_to "Create new user", users_create_path %>
		<% end %></caption><br />
			<ul class="users">
			  <% @users.each do |user| %>
			    <li>

			      <%= user.name%><br />
			      <%= link_to "edit", edit_user_path(user) %>
			      - <%= link_to "delete", user, method: :delete, data: { confirm: "You sure?" }, title: user.name %>
			      

			    </li>
			  <% end %>
			</ul>

		</div>
	<% end %>
</div>
